<h1>Test</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Count of questions</th>
    <th>Timer (min)</th>
  </tr>

  <tr>
    <td><%= @test.title %></td>
    <td><%= @test.level %></td>
    <td><%= @test.questions.count %></td>
    <td><%= @test.timer %></td>
  </tr>
</table>

<h2>Questions</h2>

<table>
  <tr>
    <th>Text</th>
    <th colspan="3">Actions</th>
  </tr>

  <%= render @test.questions %>
</table> 
<%= link_to 'Create', new_admin_test_question_path(@test) %>
<%= link_to 'Edit', edit_admin_test_path(@test) %>
<%= link_to "Destroy",
                admin_test_path(@test), 
                method: :delete, 
                data: { confirm: 'Are sure?' }%>   
<%= link_to 'Back', admin_tests_path %>
