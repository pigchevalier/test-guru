<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.text_field :image, id: :badge_image %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.collection_select :rule, Badge.rules.keys ,:to_s , :to_s, prompt: true %>
  </p>

  <p>
    <%= form.label :parameter %><br>
    <%= form.text_field :parameter, id: :badge_parameter %>
  </p>

  <p><%= form.submit %></p>

<% end %>
